<html>
  <head>
    <meta charset="utf-8"/>
    <title> SURVEY </title>
  </head>

  <body>
    <h1> UNRC SURVEY </h1>
    <form id = 'form' action='/responses' method='POST'> <!-- Form start -->
    
        <ul>
            <% @questions.map do |question| %> <!-- Por cada pregunta -->
              <li> <%= question.number %> <%= question.description %> </li> <!-- Display the question -->
              <ul>
                  <% question.choices.map do |choice| %> <!-- For each choice of the question -->
                      <input type='radio' name='<%= question.id%>' value='<%= choice.id%>'> <%= choice.text%> </input> 
                      <!-- For each choice we generate a 'button' to be able to select it, the options are exclusive -->
                      <!-- For the moment we assume that the choices are exclusive -->
                  <% end %>
                  <input type='hidden' name='question_id[]' value='<%=question.id%>'>
              </ul>
            <% end %>
        </ul>

        <input type='hidden' name='survey_id' value='<%= @survey.id%>'>
        <button type='submit' value='submit'>
            Send
        </button>
    </form> <!-- Form end -->
  </body>
</html>