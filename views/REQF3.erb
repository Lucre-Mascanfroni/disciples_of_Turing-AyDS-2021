<html>
  <head>
    <meta charset="utf-8"/>
    <title> Encuestas </title>
    <link rel="stylesheet" type="text/css" href="css/careers_styles.css" />
  </head>

  <body>
    <%= erb :menu %>
    <form action="/surveys" method="GET" class='form'>
        <input type='date' name='firstDate' required>
        <input type='date' name='lastDate' required>
        <select name="careerId">
            <option selected value="0"> Elige una opcion </option>
            <% @careers.map do |career| %>
                <option value=<%= career.id %>> <%= career.name %> </option>
            <% end %>
        </select> <br>
        <input type='submit' value='Enviar'>
    </form>

    <% if !@result.empty? %>
      <%= @result["name"] %> - <%= @result["number"] %> encuestas.
    <% end %>
  </body>
</html>